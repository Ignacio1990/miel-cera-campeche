header
	background-image url('/images/bg.jpg')
	-moz-background-size cover
	-webkit-background-size cover
	-o-background-size cover
	background-size cover
	color white
	height 500px
	position relative
	margin-top 100px
	width 100%
	
.header_inferior
	background negro
	position fixed
	left 0
	top 0
	height 100px
	width 100%
	z-index 10
	
	&:before
		content ""
		border-top 40px solid negro
		border-right  50px solid transparent
		border-left solid transparent
		position absolute
		margin-left -10px
		top 100px
		z-index -1
		width 35%
		
.header__nav
	list-style none
	line-height 100px
	font-size 0
	
	li
		display inline-block
		padding 0 20px 
	
	a
		color white
		font-size 1.6rem
		padding-bottom 3px
		
		&:hover
			border-bottom 3px solid amarillo
			text-decoration none
	
		
.header__logo
	line-height 100px
	
.header__logo-img
	margin-top 10px
	width 25%

.adorno_inferior
	background amarillo
	color white
	height 50px
	position absolute
	width 100%
	bottom 0
	z-index 2
	
	&:before
		content ""
		border-bottom 40px solid amarillo
		border-left  50px solid transparent
		border-right 0px solid transparent
		position absolute
		top -35px
		z-index -1
		width 30%
		right 0px

.imagen_abejas
	width 100%
	height 250px
	position absolute
	z-index -2
	top 100px
			
	
@media screen and (max-width 1100px)
	header
		height 200px
		&:before
			display none
			
		.header__nav
			background negro
					
			li
				height 100%
				width 50%
				display inline-block
				top -15px
				
				&:hover
					background amarillo
					text-decoration none
					
	.pull-right
		width 100%
		height 100%
		
	.header__logo-img
		width 25%
		height 55%
		margin-left 20px
		position relative
		left 30%
		
	.container
		width 100%
		padding 0	
	
	.adorno_inferior
		display none
		
	.imagen_abejas
		display none
		
		
@media screen and (max-width 700px)
	header
		&:before
			display none
		.header__nav
			background negro
					
			li
				height 100%
				width 100%
				margin 0
				display inline-block
				
				
				&:hover
					background amarillo
					text-decoration none
		
	.pull-right
		width 100%
		height 100%
	
	.header__logo-img
		width 35%
		height 40%
		margin-left 20px
		
	.container
		padding-right 0
		padding-left 0	
	
	.adorno_inferior
		display none
		
	.imagen_abejas
		display none